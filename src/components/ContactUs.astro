---
import Container from "./Container.astro";
import Form from "./section/Form.astro";
import { Icon } from "astro-icon/components";

const Datas = [
  {
    number: 420,
    suffix: "",
    text: "Projects Done"
  },
  {
    number: 8,
    suffix: "K+",
    text: "Happy Client"
  },
  {
    number: 12,
    suffix: "+",
    text: "Years of Work"
  }
]

---

<Container class="relative py-20 overflow-hidden">
    <div class="absolute w-1/2 h-full   -left-1/6 top-0 z-0">
        <img src="https://placehold.co/800" alt="" class="h-full w-full object-cover object-center rounded-2xl">
    </div>
    <div class="relative py-15 flex justify-between z-10">
        <div class="w-2/5 m-10">
            <Form />
        </div>
        <div class="w-3/5 flex flex-col gap-20 px-10">
            <div class="">
                <p class="text-7xl font-semibold font-ubuntu">Let's Discuss</p>
                <p class="text-7xl font-semibold font-ubuntu">Your Next</p>
                <p class="text-7xl font-semibold font-ubuntu">
                    Creative Project<span class="text-primary">.</span>
                </p>
            </div>
            <div class="flex px-20">
                <div class=" flex justify-center items-center p-10">
                    <Icon
                        name="sparkle"
                        class="size-15 stroke-2 stroke-primary group-hover:rotate-0 transition-transform duration-200"
                    />
                </div>
                <div class="flex justify-center items-center">
                    <p class="text-xl">We help creative agencies, designers, and other creative people showcase their perfect work.</p>
                </div>
            </div>
            <div class="flex w-full justify-between px-10 py-5">
                {
                Datas.map((data) => (
                <div class="">
                    <p class="text-5xl font-medium font-ubuntu">{ data.number }<span>{data.suffix}</span> </p>
                    <p class="text-lg text-foreground/70">{data.text}</p>
                </div>
                ))
                }
            </div>
        </div>
    </div>
</Container>
<script>

</script>


